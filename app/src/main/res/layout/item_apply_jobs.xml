<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip"
    android:background="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_job"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_job"
                android:layout_toLeftOf="@+id/tv_date"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="10dip"
                android:textColor="@color/black_4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_salary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_toRightOf="@+id/img_job"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:textColor="@color/salary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_recruits_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_toRightOf="@+id/tv_salary_title"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:textColor="@color/black9"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dip"
                android:textSize="12sp"
                android:textColor="@color/black_4"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_welfare"
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:layout_toRightOf="@+id/img_job"
                android:layout_below="@+id/tv_salary_title"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/btn_applyJob"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_welfare_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_aj_welfare"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_welfare_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/shape_aj_welfare"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_welfare_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/shape_aj_welfare"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_applyJob"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@+id/ll_welfare"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/selector_apply_job_btn"
                android:gravity="center"
                android:text="申请"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dip"
            android:background="@color/grayd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:textColor="@color/graya"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dip"
                android:textColor="@color/graya"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
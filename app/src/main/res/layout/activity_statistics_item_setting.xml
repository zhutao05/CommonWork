<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_statistics_item_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_statistics_item_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:background="#00000000"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_statistics_item_setting_title"
            android:textSize="@dimen/title_string_size"
            android:text="加班工资设置"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_statistics_item_setting_name"
            android:textSize="@dimen/title_string_size"
            android:text="全勤奖"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColorLink="#00000000"
            android:id="@+id/et_statistics_item_setting"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="0.0"
            android:maxLength="6"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content"
            android:gravity="right"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_string_size"
            android:text="元/月"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_statistics_item_save"
        android:layout_margin="15dp"
        android:text="保存"
        android:textSize="@dimen/title_string_size"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

</LinearLayout>

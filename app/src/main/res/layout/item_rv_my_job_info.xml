<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_job_info_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxEms="10"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_string_size" />
        <TextView
            android:id="@+id/tv_item_job_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03-09"
            android:textColor="@color/colorDeepHui"
            android:textSize="@dimen/small_string_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_job_info_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-3000"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_string_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 元/月"
            android:textSize="@dimen/small_string_size" />

        <TextView
            android:id="@+id/tv_item_job_info_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="安卓工程师"
            android:textSize="@dimen/small_string_size" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHui"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_job_info_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳"
            android:textSize="@dimen/small_string_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_string_size"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_item_job_info_region"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="罗湖区"
            android:textSize="@dimen/small_string_size" />
        <TextView
            android:id="@+id/tv_item_job_info_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_string_size"
            android:text="审核中"/>

    </LinearLayout>
</LinearLayout>
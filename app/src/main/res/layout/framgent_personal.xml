<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="我的"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_string_size" />

        <ImageButton
            android:layout_margin="15dp"
            android:id="@+id/ib_my_center_employee_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="5dp"
            android:src="@mipmap/setting" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="40dp">

                <com.hzu.jpg.commonwork.widgit.CircleImageView
                    android:id="@+id/iv_center_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_head_default"
                    app:border_width="2dp"
                    app:border_color="@color/background" />

                <TextView
                    android:id="@+id/tv_center_no_login"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_title_string_size"
                    android:text="请点击登录"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/ll_center_login_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="bottom"
                        android:textColor="@color/white"
                        android:id="@+id/tv_center_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123545632"
                        android:textSize="@dimen/normal_string_size" />

                    <TextView
                        android:id="@+id/tv_center_username"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123545632"
                        android:textSize="@dimen/normal_string_size" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_center_employee_items"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_my_borrow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_center_employee_borrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/big_string_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/small_string_size" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款"
                            android:textSize="@dimen/normal_string_size" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHui" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorHui" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_center_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/big_string_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/small_string_size" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分"
                            android:textSize="@dimen/normal_string_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:background="@drawable/item_click_grey"
                    android:id="@+id/bt_center_my_found_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@mipmap/find_job"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/find_job"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="我的求职"
                    android:textSize="@dimen/normal_string_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:background="@drawable/item_click_grey"
                    android:id="@+id/bt_center_my_salary_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@mipmap/packet"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/packet"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="我的工资单"
                    android:textSize="@dimen/normal_string_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:background="@drawable/item_click_grey"
                    android:id="@+id/bt_center_my_score_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@mipmap/score_shop"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/score_shop"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="积分商城"
                    android:textSize="@dimen/normal_string_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:background="@drawable/item_click_grey"
                    android:id="@+id/bt_center_my_ot_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@mipmap/ot_record"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/ot_record"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="考勤/工资"
                    android:textSize="@dimen/normal_string_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:background="@drawable/item_click_grey"
                    android:id="@+id/bt_center_my_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@mipmap/info"
                    android:drawableLeft="@mipmap/info"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="个人信息"
                    android:textSize="@dimen/normal_string_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHui" />

                <TextView
                    android:background="@drawable/item_click_grey"
                    android:id="@+id/bt_center_my_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@mipmap/recommend"
                    android:drawableLeft="@mipmap/recommend"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="我的推荐"
                    android:textSize="@dimen/normal_string_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHui" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_center_company_items">
                <TextView
                    android:id="@+id/bt_center_my_publish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/hire"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="我的招聘"
                    android:textSize="@dimen/normal_string_size" />

                <include layout="@layout/text_view_padding_grey"/>
                <TextView
                    android:id="@+id/bt_center_company_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@mipmap/company_info"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="公司信息"
                    android:textSize="@dimen/normal_string_size" />
                <include layout="@layout/text_view_padding_grey"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hzu.jpg.commonwork.activity.service.NewsDetailActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="51.0dip"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back"
            android:layout_width="70.0dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_back"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:scaleType="centerInside"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/relsase_title_name_new"
            style="@style/style_title"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="新闻详情"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:padding="10dip"
            android:text="帖子"
            android:textColor="@color/black_4"
            android:textSize="15sp"
            android:visibility="invisible" />
    </LinearLayout>

    <WebView
        android:id="@+id/tv_about_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout_job_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_my_job_info_icon"
                    android:layout_width="240dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_my_job_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="酒店茶艺师"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/big_string_size"
                    />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_my_job_info_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="3000-5000"
                        android:textSize="@dimen/title_string_size"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_string_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/"/>

                    <TextView
                        android:text="月"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_string_size"
                        android:id="@+id/tv_my_job_info_unit"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_my_job_info_finish"
                        android:textSize="@dimen/normal_string_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招聘中"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="加班工资:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_more_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="5"
                        android:textSize="@dimen/normal_string_size"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/small_string_size"
                        android:text="/小时"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="招聘人数:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="5"
                        android:textSize="@dimen/normal_string_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="要        求:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_require"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="初中及以上"
                        android:textSize="@dimen/normal_string_size"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="工作地点:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="惠州惠阳淡水湖百花园远水岸2栋20号蒲佳佳顺"
                        android:textSize="@dimen/normal_string_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="发布时间:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="初中及以上"
                        android:textSize="@dimen/normal_string_size"/>
                </LinearLayout>


                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="公司福利:"/>

                <com.hzu.jpg.commonwork.widgit.MyFlowLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fl_my_job_info"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHui"/>
            <RelativeLayout
                android:id="@+id/rl_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_job_info_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="青岛洪森集团超艺模具有限公司"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/ll_PeopleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_below="@id/tv_my_job_info_company_name">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="联  系  人:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_connector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="20-99人"
                        android:textSize="@dimen/normal_string_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/ll_PeopleNum"
                    android:layout_marginTop="@dimen/text_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDeepHui"
                        android:textSize="@dimen/normal_string_size"
                        android:text="联系电话:"/>

                    <TextView
                        android:id="@+id/tv_my_job_info_connector_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginStart="10dp"
                        android:text="民营"
                        android:textSize="@dimen/normal_string_size"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorHui"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位描述"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_my_job_info_describes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_string_size"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

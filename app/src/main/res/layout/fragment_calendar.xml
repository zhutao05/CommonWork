<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_calendar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:background="#00000000"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_statistics_item_setting_title"
            android:textSize="@dimen/title_string_size"
            android:text="日历"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    
    <LinearLayout
        android:padding="15dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_calendar_title_ot_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_string_size"
                android:text="月加班收入"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_string_size"
                android:id="@+id/tv_calendar_sign_rmb"
                android:layout_below="@id/tv_calendar_title_ot_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <TextView
                android:id="@+id/tv_calendar_ot_salary"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_calendar_title_ot_salary"
                android:layout_toRightOf="@id/tv_calendar_sign_rmb"
                android:layout_width="wrap_content"
                android:textSize="@dimen/title_string_size"
                android:text="65.49"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_calendar_title_ot_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_string_size"
                android:text="月加班时长"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/title_string_size"
                android:id="@+id/tv_calendar_ot_hours"
                android:layout_below="@id/tv_calendar_title_ot_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_calendar_title_ot_hours"
                android:layout_toRightOf="@id/tv_calendar_ot_hours"
                android:layout_width="wrap_content"
                android:textSize="@dimen/normal_string_size"
                android:text="小时"
                android:layout_alignBaseline="@id/tv_calendar_ot_hours"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:background="#00000000"
            android:id="@+id/ib_calendar_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/calendar_last"/>
        <TextView
            android:id="@+id/tv_calendar_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_string_size"
            android:text="2017-03"/>
        <ImageButton
            android:background="#00000000"
            android:id="@+id/ib_calendar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/calendar_next"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorHui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="日"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="一"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="二"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="三"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="四"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="五"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorDeepHui"
            android:gravity="center"
            android:padding="5dp"
            android:text="六"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/normal_string_size"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_calendar"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:text="加班时间设置"
        android:id="@+id/tv_picker_dialog_title"
        android:textSize="@dimen/title_string_size"/>
    <include layout="@layout/text_view_padding_grey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHui"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <NumberPicker
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/np_add_ot_dialog_picker_hours"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="130dp"/>
    <TextView
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:text="小时"/>
    <NumberPicker
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/np_add_ot_dialog_picker_minutes"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="130dp"/>
    <TextView
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:text="分钟"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHui"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_add_record_dialog_picker_cancel"
            android:background="@drawable/button_ot_record_normal"
            android:text="取消"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_add_record_dialog_picker_sure"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_ot_record_selected"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
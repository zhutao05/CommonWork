<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_my_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="个人信息"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_string_size" />

        <TextView
            android:id="@+id/tv_my_info_edit"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_string_size"
            android:text="编辑"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHui"
            android:orientation="vertical">

            <FrameLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.hzu.jpg.commonwork.widgit.CircleImageView
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_head_default"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/iv_my_info" />
            </FrameLayout>


            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_my_info_username"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="昵称"
                chow:content="未填写"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_telephone"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="账号"
                chow:content="2584061172"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_link_phone"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="联系方式"
                chow:content="未填写" />

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_sex"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="性别"
                chow:content="男"/>

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_birthday"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="出生年月"
                chow:content="1999-07-05"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_realname"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="真实姓名"
                chow:content="张三"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_idcard"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="身份证号"
                chow:content="1234567890"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_school"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="学校"
                chow:content="惠州学院"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_major"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="专业"
                chow:content="网络工程"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_my_info_province"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="所在省份"
                chow:content="未填写"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_city"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="所在城市"
                chow:content="未填写"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_region"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="所在地区"
                chow:content="未填写"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_require"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="工作要求"
                chow:content="未填写"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_entry_time"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="可工作时间"
                chow:content="未填写"/>

            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:id="@+id/ll_my_info_balance"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="余额"
                chow:content="0"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_bank_card"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="银行卡号"
                chow:content="未填写"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_point"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="积分"
                chow:content="0"/>
            <com.hzu.jpg.commonwork.widgit.MyLinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/ll_my_info_sign"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                chow:money_layout="false"
                chow:title="连续签到天数"
                chow:content="0"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
